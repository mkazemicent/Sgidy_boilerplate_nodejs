<!-- menu.ejs -->
<nav class="navbar bg-base-100 shadow-lg">
  <div class="container mx-auto flex flex-wrap justify-between items-center">
    <div class="flex-1">
      <a class="text-xl font-bold text-neutral-content" href="/">My Application</a>
    </div>
    <div class="block lg:hidden">
      <button id="menu-toggle" class="btn btn-ghost lg:hidden">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
    <div class="hidden w-full lg:flex lg:w-auto" id="menu">
      <ul class="menu menu-horizontal p-0">
        <li>
          <a class="px-4 py-2 <%= active === 'home' ? 'text-primary font-semibold' : '' %>" href="/" style="color: inherit;">Home</a>
        </li>
        <% if (!user) { %>
        <li>
          <a class="px-4 py-2 <%= active === 'login' ? 'text-primary font-semibold' : '' %>" href="/login" style="color: inherit;">Login</a>
        </li>
        <li>
          <a class="px-4 py-2 <%= active === 'register' ? 'text-primary font-semibold' : '' %>" href="/register" style="color: inherit;">Register</a>
        </li>
        <% } else { %>
        <li>
          <a class="px-4 py-2" href="/logout" style="color: inherit;">Logout</a>
        </li>
        <li>
          <span class="px-4 py-2" style="color: inherit;">Welcome, <%= user.username %></span>
        </li>
        <% } %>
        <li>
          <a class="px-4 py-2 <%= active === 'about' ? 'text-primary font-semibold' : '' %>" href="/about" style="color: inherit;">About Us</a>
        </li>
        <li>
          <a class="px-4 py-2 <%= active === 'contact' ? 'text-primary font-semibold' : '' %>" href="/contact" style="color: inherit;">Contact</a>
        </li>
      </ul>
    </div>
    <div class="dropdown dropdown-end">
      <label tabindex="0" class="btn m-1">Theme</label>
      <ul tabindex="0" class="dropdown-content menu p-2 shadow bg-base-100 rounded-box w-52">
        <li><a data-set-theme="autumn" data-act-class="active">Autumn</a></li>

        <li><a data-set-theme="coffee" data-act-class="active">coffee</a></li>
        <li><a data-set-theme="cyberpunk" data-act-class="active">cyberpunk</a></li>
      </ul>
    </div>
  </div>
</nav>

<script>
  const menuToggle = document.getElementById('menu-toggle');
  const menu = document.getElementById('menu');

  menuToggle.addEventListener('click', () => {
    menu.classList.toggle('hidden');
  });
</script>



    

    
    
 
